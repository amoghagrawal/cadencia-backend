{
  "name": "cadencia-backend",
  "version": "1.0.0",
  "description": "Backend service for Cadencia music app with GroqAPI integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp package.json dist/",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:clean": "node kill-port.js && npm run dev",
    "test": "jest",
    "client": "node client.js",
    "test:ai": "node test-ai-quality.js",
    "test:stress": "node stress-test.js",
    "kill-port": "node kill-port.js",
    "spotify": "node spotify-client.js"
  },
  "keywords": [
    "music",
    "ai",
    "mood",
    "groq",
    "recommendation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.11",
    "groq-sdk": "^0.17.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "groq": "^3.80.1",
    "readline": "^1.3.0"
  },
  "engines": {
    "node": ">=18.x"
  }
