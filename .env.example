# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# GroqAPI Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama-3-8b-8192

# Spotify API credentials - get these from Spotify Developer Dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# For local development
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback
# For production (uncomment and update with your Vercel URL)
# SPOTIFY_REDIRECT_URI=https://your-app-name.vercel.app/api/spotify/callback 